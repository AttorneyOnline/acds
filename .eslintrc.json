{
    "extends": "standard",
    "env": {
        "jest": true
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "space-before-function-paren": ["error", "never"],
        "camelcase": ["off", { "properties": "never", "ignoreDestructuring": true }]
    }
}